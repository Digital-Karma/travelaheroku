							<div class="col-4">
								<i class="fas fa-comments fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.comment}}
									Avis post√©s</h4>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
		<hr>
		<div class="row">
			<div class="col">
				<div class="alert alert-success">
					<h2 class="alert-heading my-3">
						<i class="fas fa-arrow-up"></i>
						Les Focus Pays populaires</h2>
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Focus Pays</th>
								<th>Voyageur du Focus</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for pays in bestFocusPays %}
								<tr>
									<td>{{pays.title}}</td>
									<td>
										<img src="{{pays.picture}}" class="avatar avatar-micro" alt="image de profil de {{pays.firstName}} {{pays.lastName}}">
										{{pays.firstName}}
										{{pays.lastName}}
									</td>
									<td class="text-center">
										<span class="badge badge-dark rounded">
											{{pays.note | number_format(1, ",", " ")}}
										</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="col">
				<div class="alert alert-danger">
					<h2 class="alert-heading my-3">
						<i class="fas fa-arrow-down"></i>
